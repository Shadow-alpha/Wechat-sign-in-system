/* pages/mine/mine.wxss */
.title{
    text-align: center;
    border-bottom: 1px solid #ccc;
    font-size: 40rpx;
    padding: 20rpx 0;
    color: #3f51b5;
}

.row {
    height: 100rpx;
    border-bottom: 1px solid #ccc;
    line-height: 100rpx;
    padding: 0 10rpx;
}

.row .left{
    float: left;
    color: #bbb;
}

.row .right{
    float: right;
}
/* 退出登录 */
.exit{  
    margin-top: 100rpx;
    text-align: center;
    color: #1e88e5;
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #eee;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}