/* pages/first/first.wxss */
/* 图标 */
.logo{
    display: flex;
    justify-content: center;
    margin: 20rpx 0 100rpx;
}
.logo image {
    width: 300rpx;
    height: 300rpx;
}

.title {
    padding-left: 20rpx;
    font-size: 50rpx;
    color: #0078d4;
}
.desc{
    font-size: 25rpx;
    color: #ccc;
    padding-left: 20rpx;
    margin-top: 20rpx;
}
/* 按钮 */
.login {
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    height: 300rpx;
    justify-content: space-around;
}

.login button {
    height: 100rpx;
    line-height: 200%;
    border-radius: 50rpx;

}

/* 底部 */
.check navigator {
    display: inline;
    color: #576ba3;
}

.check {
    position: absolute;
    bottom: 20rpx;
    left: 10rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.check checkbox {
    height: 50rpx;
}