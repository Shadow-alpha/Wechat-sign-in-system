.title{
    text-align: center;
    border-bottom: 1px solid #ccc;
    font-size: 40rpx;
    padding: 20rpx 0;
    color: #3f51b5;
}

.row {
    height: 50rpx;
    border-bottom: 1px solid #ccc;
    line-height: 50rpx;
    padding: 0 10rpx;
}

.row .left{
    float: left;
    color: #bbb;
}

.row .right{
    float: right;
}

.text{
    border: 1px solid #666;
    border-radius: 20rpx;
    padding: 20rpx;
    margin: 10rpx auto;
    height: 300rpx;
    width: 80%;
}
.write{
    margin-top: 10rpx;
}
.wrapper{
    display: flex;
    justify-content: flex-end;
    width: 80%;
    margin: 0 auto 30rpx;
}